{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/*/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        "$APPLOG/*/**",
        "$APPLOCALDATA/*/**"
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        "$APPLOG/*/**"
      ]
    }
  ]
}
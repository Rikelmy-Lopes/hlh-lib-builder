{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/*/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        "$APPLOCALDATA/*/**"
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        "$APPLOCALDATA/*/**"
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        "$HOME/*/**"
      ]
    },
    "dialog:default",
    "log:default"
  ]
}
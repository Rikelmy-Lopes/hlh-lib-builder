{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": ["*/**"],
      "deny": ["C:/Windows", "C:/Program Files", "C:/Program Files (x86)", "C:/ProgramData"]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": ["*/**"],
      "deny": ["C:/Windows", "C:/Program Files", "C:/Program Files (x86)", "C:/ProgramData"]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": ["$APPLOCALDATA/*/**"]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": ["$APPLOCALDATA/*/**"]
    },
    "dialog:default",
    "log:default"
  ]
}
